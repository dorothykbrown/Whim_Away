<div class="container">
  <div class="row">
    <div class="col mt-3">
      <div class="property">
        <h2><%= @property.name %></h2>
        <h3><%= '⭐️' * @property.rating.to_i %></h3>
        <h5><em><%= @property.category %></em></h5>
        <h6><%= @property.address %></h6>
        <ul>
          <li><b>Price per night:</b> $<%= @property.price %></li>
          <li><%= @property.description %></li>
        </ul>
        <hr>
        <h5>Book Property</h5>
        <%= simple_form_for [@property, @booking] do |f| %>
          <%= f.input :check_in_date, label: 'Check-In Date', as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :check_out_date, label: 'Check-Out Date', as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :num_guests, label: 'Number of Guests' %>
          <%= f.button :submit, 'Book', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col mt-3">
      <div class="property-image">
        <%= image_tag(@property.photo) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col p-3">
      <div class="btn btn-outline-primary">
        <%= link_to 'Return to Listings', properties_path %>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <% if  policy(@property).edit? %>
      <%= link_to 'Edit', edit_property_path(@property)%> |
    <% end %>
    <% if  policy(@property).destroy? %>
      <%= link_to 'Remove', property_path(@property), data: { confirm: 'Are you sure?', method: :delete } %>
    <% end %>
  </div>
</div>