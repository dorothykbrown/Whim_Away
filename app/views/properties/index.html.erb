<div class="container mt-3 pb-3">
  <div class="row">
    <div class="col-4 p-2">
      <div class="mb-5">
        <h4>Filter by Category</h4>
        <ul>
          <li><h5><%= link_to 'All Types', properties_path %></h5></li>
          <li><h5><%= link_to 'Treehouses', properties_path(:category=>"Treehouse") %></h5></li>
          <li><h5><%= link_to 'Castles', properties_path(:category=>"Castle") %></h5></li>
          <li><h5><%= link_to 'Sailboats', properties_path(:category=>"Sailboat") %></h5></li>
        </ul>
      </div>

      <div class="form-wrapper" style="width: 305px;">
        <h4>Search by date</h4>

        <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div
      id="map"
      style="width: 100%;
      height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>

    <div class="col-8">
      <h3><strong>Available Properties</strong></h3>
      <%= render 'shared/card' %>
    </div>
  </div>

</div>
